#!/usr/bin/env python3
import socket
import time
import sys

# connection constants
HOST = '127.0.0.1'
PORT = 54901

def send_raw(line):
    with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as client_socket:
        # connect to server
        client_socket.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDR, 1)
        client_socket.connect((HOST, PORT))
    
        # send line via socket
        client_socket.sendall(line)

        # close socket
        client_socket.shutdown(socket.SHUT_RDWR)
        client_socket.close()


def send_line(line):
    line_len = len(line)
    data = b'A' + line_len.to_bytes(4, byteorder='big') + line.encode()
    assert line_len <= 2100, "sequenza piu' lunga di 2100 char"
    send_raw(data)

def send_termination():
    send_raw(b'A' + b'\x00\x00\x00\x00')

################

if __name__ == '__main__':
    # wrong number of parameters
    if (len(sys.argv) != 2):
        sys.exit(1)

    # get input file name
    input_file = sys.argv[1]

    with open(sys.argv[1], 'r') as file:

        for line in file:
            if line.strip():
                
                # send the read line
                send_line(line)

    # send line length = 0 in bytes to indicate termination
    send_termination()

    # Required when run with valgrind
    time.sleep(1)
